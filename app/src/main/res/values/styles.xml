<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BtnTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BtnSubTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Button-->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text_or_icon_color_selector</item>
        <item name="backgroundTint">@color/button_background_color_selector</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/orange</item>
        <item name="strokeWidth">2dp</item>
        <item name="tint">@color/white</item>
        <item name="elevation">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!--TextInputEditText-->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange</item>
        <item name="background">@color/white</item>
        <item name="hintTextColor">@color/orange</item>
    </style>

<!--Toolbar-->
    <style name="CustomToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="titleTextColor">@color/blue</item>
    </style>

<!--BottomNavigationView-->

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/navigation_icon_text_color_selector</item>
        <item name="itemTextColor">@color/navigation_icon_text_color_selector</item>
        <item name="itemRippleColor">@color/orange</item>
    </style>

<!--SwitchCompact-->

    <style name="CustomSwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/thumb_switch_color</item>
        <item name="android:trackTint">@color/thumb_track_color</item>
    </style>

<!--FloatingButton-->

    <style name="CustomFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/orange</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Fab</item>
        <item name="elevation">6dp</item>
        <item name="hoveredFocusedTranslationZ">8dp</item>
    </style>

    <style name="ShapeAppearance.Fab" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

<!--ConstraintLayout-->

    <style name="CustomConstraintLayout" parent="ShapeAppearance.CustomConstraintLayout">
        <item name="android:background">@drawable/cardview_and_constraintlayout_layout</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ShapeAppearance.CustomConstraintLayout" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">2dp</item>
    </style>

<!--TabLayout-->

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">@color/orange</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabTextColor">@color/blue</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--CardView-->
    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

<!--Ingredient ImageButtons-->

    <style name="CustomDecreaseButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/blue</item>
        <item name="android:background">@drawable/btn_decrease_round</item>
    </style>

    <style name="CustomIncreaseButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/green</item>
        <item name="android:background">@drawable/btn_increase_round</item>
    </style>

    <style name="CustomDeleteButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/red</item>
        <item name="android:background">@drawable/btn_delete_round</item>
    </style>


</resources>